---
import Layout from '../layouts/Layout.astro';
---

<Layout title='Arcade Express'>
	<div class='hero'>
		<div class='image'>
			<img src='logo.png' alt='Arcade Express logo' />
		</div>
		<div class='title'>Arcade Express</div>
	</div>

	<div class='games'>
		<a href='https://gotm.io/natouche68/sliding-penguins?forceFullscreen=true' class='card'>
			<img src='sliding-penguins.png' alt='Sliding Penguins' />
		</a>
	</div>

	<style>
		.hero {
			height: 40vh;
			background: #ed4545;
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;
		}

		.image img {
			height: 20vh;
		}

		.title {
			color: #ffffff;
			font-size: 48px;
			font-weight: 700;
			width: 100%;
			text-align: center;
		}

		.games {
			margin: 48px 10%;
			display: flex;
			justify-content: space-between;
			align-items: flex-start;
			flex-wrap: wrap;
		}

		.card {
			display: block;
			width: 36vw;
			border-radius: 16px;
			margin-bottom: 32px;
		}

		.card img {
			width: 100%;
			border-radius: 16px;
		}
	</style>
</Layout>
